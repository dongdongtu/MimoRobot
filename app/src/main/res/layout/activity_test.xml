<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="头部上下"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/headver"
                android:layout_margin="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="50"
                android:progress="0"
                android:min="-50"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="头部左右"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/headhor"
                android:layout_margin="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="50"
                android:min="-50"
                android:progress="0"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="左臂"
                android:progress="50"

                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/lefthand"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="80"
                android:layout_margin="50dp"
                android:progress="0"
                android:min="-50"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="右臂"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/righthand"
                android:layout_margin="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="80"
                android:progress="0"
                android:min="-50"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="左下臂"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/left_xia_hand"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="50"
                android:progress="0"
                android:layout_margin="50dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="右下臂"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/right_xia_hand"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:max="50"
                android:layout_margin="50dp"
                android:progress="0"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_move"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginLeft="100dp"
                android:text="行走摆臂"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/stop_move"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginRight="100dp"
                android:text="停止摆臂"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>