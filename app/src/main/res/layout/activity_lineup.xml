<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_margin="50dp"
       android:background="@drawable/identify_main_shape">
       <TextView
           android:layout_marginTop="30dp"
           android:id="@+id/tv_fund"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:textSize="30sp"
           android:text="前面排队人数：0"
           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_marginTop="10dp"
           android:id="@+id/iv_fund"
           android:layout_width="300dp"
           android:layout_height="100dp"
           android:src="@drawable/lineup_fund"
           android:layout_gravity="center_horizontal"/>
       <TextView
           android:layout_marginTop="30dp"
           android:id="@+id/tv_insurrance"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:textSize="30sp"
           android:text="前面排队人数：0"
           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_marginTop="10dp"
           android:id="@+id/iv_insurrance"
           android:layout_width="300dp"
           android:layout_height="100dp"
           android:src="@drawable/lineup_insurrance"
           android:layout_gravity="center_horizontal"/>
       <TextView
           android:layout_marginTop="30dp"
           android:id="@+id/tv_risgester"
           android:textSize="30sp"
           android:text="前面排队人数：0"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_marginTop="10dp"
           android:id="@+id/iv_risgester"
           android:layout_width="300dp"
           android:layout_height="100dp"
           android:src="@drawable/lineup_risgester"
           android:layout_marginBottom="40dp"
           android:layout_gravity="center_horizontal"/>
   </LinearLayout>
</LinearLayout>