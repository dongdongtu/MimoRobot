<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/identify_main_shape"
        android:layout_marginLeft="@dimen/wave_height_size"
        android:layout_marginBottom="@dimen/wave_height_size"
        android:layout_marginRight="@dimen/wave_height_size">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/identify_shape"
                android:layout_marginBottom="100dp"
                android:layout_weight="2">


                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/touxiang"
                    android:layout_weight="5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="姓名"/>


                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="性别"/>
                    <TextView
                        android:id="@+id/tv_nature"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="民族"/>
                    <TextView
                        android:id="@+id/tv_idnum"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="28sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="身份证号"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="签证机关"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="#444444"
                        android:layout_margin="5dp"
                        android:text="有效期"/>
                </LinearLayout>
            </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_idcard"
                android:background="@drawable/identify_shape"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:textSize="45dp"
                android:text="身份证放置区"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/identufy_print"
                android:textSize="45dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>