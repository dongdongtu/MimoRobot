<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TitleBarView">
        <attr name="title_bar_title" format="string" />
        <attr name="title_bar_right_title" format="string" />
        <attr name="title_bar_title_size" format="dimension" />
        <attr name="title_bar_right_title_size" format="dimension" />
        <attr name="title_bar_left_icon" format="reference" />
        <attr name="title_bar_has_left_icon" format="boolean" />
    </declare-styleable>
</resources>
